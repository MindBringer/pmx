# Server
RAG_BIND=0.0.0.0
RAG_PORT=8082
SCORE_THRESHOLD=0.3   # 0 = aus, z.B. 0.2â€“0.4 ist oft gut

# Qdrant (must be reachable on pmx-net)
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=pmx_docs
QDRANT_TIMEOUT=30

# Ollama (service name from pmx stack)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_TIMEOUT=900     # 15 Minuten

# Models (swappable)
LLM_MODEL=llama3
GENERATOR_MODEL=llama3
EMBED_MODEL=mxbai-embed-large

# Chunking
CHUNK_SIZE=1200
CHUNK_OVERLAP=120

# Security
API_KEY=change-me
ALLOWED_ORIGINS=*
ENABLE_RERANKER=false
RERANK_MODEL=bge-reranker-v2-m3

# Audio
WHISPER_MODEL=medium
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_CACHE=/app/storage/whisper

#diarization / speaker rec.
DEVICE=cpu
ASR_ENGINE=faster-whisper
ASR_MODEL=medium
ASR_COMPUTE_TYPE=int8_float32
DIAR_ENGINE=local
DIAR_MAX_SPEAKERS=0
IDENTIFICATION=true
SPEAKER_DEVICE=cpu
SPEAKER_STORE=qdrant
SPEAKER_COLLECTION=speakers
SPEAKER_VEC_SIZE=192
SPEAKER_DIR=/app/storage/speakers
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=