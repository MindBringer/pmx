# Chunking
CHUNK_SIZE=1200
CHUNK_OVERLAP=120

# Security
API_KEY=change-me
ALLOWED_ORIGINS=*
ENABLE_RERANKER=false
RERANK_MODEL=bge-reranker-v2-m3
