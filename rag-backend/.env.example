# Server
RAG_BIND=0.0.0.0
RAG_PORT=8082
SCORE_THRESHOLD=0.3

# Qdrant (must be reachable on pmx-net)
QDRANT_URL=http://192.168.30.42:6333
QDRANT_COLLECTION=pmx_docs
QDRANT_TIMEOUT=30

# Ollama
OLLAMA_BASE_URL=http://192.168.30.43:11434
OLLAMA_TIMEOUT=900

# Models
EMBED_BACKEND=ollama
LLM_PROVIDER=ollama
LLM_MODEL=llama3
GENERATOR_MODEL=llama3
EMBED_MODEL=mxbai-embed-large

# Chunking
CHUNK_SIZE=1200
CHUNK_OVERLAP=120

# Security
API_KEY=change-me
ALLOWED_ORIGINS=*
ENABLE_RERANKER=false
RERANK_MODEL=bge-reranker-v2-m3

# Audio / ASR
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_CACHE=/app/storage/whisper

DEVICE=cpu
ASR_ENGINE=faster-whisper
ASR_MODEL=medium
ASR_COMPUTE_TYPE=int8

# Diarization / Speaker-Rec
DIAR_ENGINE=local
DIAR_MAX_SPEAKERS=0
IDENTIFICATION=true
SPEAKER_DEVICE=cpu
SPEAKER_STORE=qdrant
SPEAKER_COLLECTION=speakers
SPEAKER_VEC_SIZE=192
SPEAKER_DIR=/app/storage/speakers
SPEAKER_SIM_THRESHOLD=0.70
