{
  "nodes": [
    {
      "id": "Webhook",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [100, 300],
      "parameters": {
        "httpMethod": "POST",
        "path": "llm",
        "responseMode": "lastNode"
      }
    },
    {
      "id": "Input Check",
      "name": "Input Check",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [300, 300],
      "parameters": {
        "code": "const { prompt, model, openai_api_key = null } = $json;\n\nif (!prompt || !model) {\n  throw new Error('prompt and model required');\n}\n\nreturn [{\n  json: {\n    prompt,\n    model,\n    openai_api_key\n  }\n}];"
      }
    },
    {
      "id": "Switch",
      "name": "Switch",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 1,
      "position": [500, 300],
      "parameters": {
        "value1": "={{ $json.model }}",
        "rules": [
          {
            "operation": "equal",
            "value2": "openai"
          },
          {
            "operation": "equal",
            "value2": "ollama"
          }
        ]
      }
    },
    {
      "id": "Call OpenAI",
      "name": "Call OpenAI",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [700, 200],
      "parameters": {
        "authentication": "none",
        "url": "https://api.openai.com/v1/chat/completions",
        "method": "POST",
        "responseFormat": "json",
        "jsonParameters": true,
        "bodyParametersJson": "={\n  \"model\": \"gpt-3.5-turbo\",\n  \"messages\": [\n    { \"role\": \"user\", \"content\": \"{{$json.prompt}}\" }\n  ]\n}",
        "headerParametersJson": "={\n  \"Authorization\": \"Bearer {{$json.openai_api_key}}\",\n  \"Content-Type\": \"application/json\"\n}"
      }
    },
    {
      "id": "Call Ollama",
      "name": "Call Ollama",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [700, 400],
      "parameters": {
        "authentication": "none",
        "url": "http://localhost:11434/api/generate",
        "method": "POST",
        "responseFormat": "json",
        "jsonParameters": true,
        "bodyParametersJson": "={\n  \"model\": \"mistral\",\n  \"prompt\": \"{{$json.prompt}}\"\n}"
      }
    },
    {
      "id": "Wrap",
      "name": "Wrap Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [900, 300],
      "parameters": {
        "code": "return [\n  {\n    json: {\n      response: $json.choices?.[0]?.message?.content || $json.response || $json.output || $json,\n      source: $json.model || (typeof $json.choices !== 'undefined' ? 'openai' : 'ollama')\n    }\n  }\n];"
      }
    }
  ],
  "connections": {
    "Webhook": {
      "main": [["Input Check"]]
    },
    "Input Check": {
      "main": [["Switch"]]
    },
    "Switch": {
      "main": [
        ["Call OpenAI"],  // Output 0
        ["Call Ollama"]   // Output 1
      ]
    },
    "Call OpenAI": {
      "main": [["Wrap"]]
    },
    "Call Ollama": {
      "main": [["Wrap"]]
    },
    "Wrap": {
      "main": []
    }
  },
  "active": false,
  "name": "LLM Router Clean"
}
